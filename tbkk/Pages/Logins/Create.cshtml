@page
@model tbkk.Pages.Logins.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login.Username" class="control-label"></label>
                <input asp-for="Login.Username" class="form-control" />
                <span asp-validation-for="Login.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Password" class="control-label"></label>
                <input asp-for="Login.Password" class="form-control" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login.Employee_EmployeeID" class="control-label"></label>
                <select asp-for="Login.Employee_EmployeeID" class ="form-control" asp-items="ViewBag.Employee_EmployeeID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
